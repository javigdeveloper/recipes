<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <h2 class="communityH2">Recipes shared by members of the community</h2 class="communityH2">
    <div class="cards">
      <% communityRecipes.forEach(el => { %>

      <a href="/community/<%= el._id %>">
        <div class="card communityCard">
          <h3><%= el.nameOfRecipe %></h3>
          <h4>Main Ingredient:</h4>
          <p><%= el.mainIngredient %></p>
        </div>
      </a>

      <% }) %>
    </div>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
